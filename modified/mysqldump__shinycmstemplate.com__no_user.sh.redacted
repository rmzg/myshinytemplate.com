#!/bin/sh
DATE=`date +%Y%m%d`
USER=shinycmstemplate_user
PASS=REDACTED
DB=shinycmstemplate.com
DIR=/home/wbraswell/public_html/shinycmstemplate.com-latest/backup
FILE=wbraswell_$DATE-shinycmstemplate.com__no_user.sql
rm $DIR/*no_user.sql.bz2
mysqldump --user=$USER --password=$PASS $DB --lock-tables --ignore-table=$DB.user > $DIR/$FILE
cd $DIR
du -hs $FILE
bzip2 $FILE
du -hs $FILE.bz2
